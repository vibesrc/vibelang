// Test if expression - produces a value

fn main() {
    let a = 10
    let b = 20

    // Basic if expression
    let max = if a > b { a } else { b }
    println("max: ${max}")  // Should print: max: 20

    // If expression with complex expressions in branches
    let min = if a < b { a * 2 } else { b * 2 }
    println("min*2: ${min}")  // Should print: min*2: 20

    // Nested if expression (else if chain)
    let x = 15
    let category = if x < 10 {
        1
    } else if x < 20 {
        2
    } else {
        3
    }
    println("category: ${category}")  // Should print: category: 2
}
