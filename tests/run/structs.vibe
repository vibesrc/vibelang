// Test struct definitions and field access

struct Point {
    x: i64
    y: i64
}

fn main() -> i64 {
    // Basic struct creation
    let p = Point { x: 10, y: 20 }
    if p.x != 10 {
        return 1
    }
    if p.y != 20 {
        return 2
    }

    // Multiple structs
    let p1 = Point { x: 1, y: 2 }
    let p2 = Point { x: 3, y: 4 }
    let sum_x = p1.x + p2.x
    if sum_x != 4 {
        return 3
    }

    // Field modification
    let p3 = Point { x: 0, y: 0 }
    p3.x = 100
    p3.y = 200
    if p3.x + p3.y != 300 {
        return 4
    }

    return 0
}
