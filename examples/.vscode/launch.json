{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Current File",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/../bootstrap/target/release/vibe",
      "runtimeArgs": ["run", "${file}"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Build Current File",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/../bootstrap/target/release/vibe",
      "runtimeArgs": ["build", "${file}"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
