{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vibe: run current file",
      "type": "shell",
      "command": "vibe",
      "args": ["run", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "vibe: build current file",
      "type": "shell",
      "command": "vibe",
      "args": ["build", "${file}"],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "options": {
    "env": {
      "PATH": "${workspaceFolder}/../bootstrap/target/release:${env:PATH}"
    }
  }
}
