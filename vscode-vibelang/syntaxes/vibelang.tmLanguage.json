{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vibelang",
  "scopeName": "source.vibe",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#enums" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.vibe",
          "match": "//.*$"
        },
        {
          "name": "comment.block.vibe",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "include": "#comments" }
          ]
        }
      ]
    },
    "enums": {
      "patterns": [
        {
          "comment": "Enum definition block with variant highlighting",
          "begin": "\\b(enum)\\s+([A-Z][a-zA-Z0-9_]*)(?:<[^>]*>)?\\s*(\\{)",
          "beginCaptures": {
            "1": { "name": "keyword.declaration.vibe" },
            "2": { "name": "entity.name.type.vibe" },
            "3": { "name": "punctuation.brackets.curly.vibe" }
          },
          "end": "(\\})",
          "endCaptures": {
            "1": { "name": "punctuation.brackets.curly.vibe" }
          },
          "patterns": [
            { "include": "#comments" },
            {
              "comment": "Enum variant with tuple payload: Some(T)",
              "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*(?=\\()",
              "captures": {
                "1": { "name": "support.class.vibe" }
              }
            },
            {
              "comment": "Enum variant with struct payload: Variant { ... }",
              "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*(?=\\{)",
              "captures": {
                "1": { "name": "support.class.vibe" }
              }
            },
            {
              "comment": "Unit enum variant (followed by comma, newline, or })",
              "match": "^\\s*([A-Z][a-zA-Z0-9_]*)\\s*(?=[,}\\n]|$)",
              "captures": {
                "1": { "name": "support.class.vibe" }
              }
            },
            { "include": "#types" },
            { "include": "#punctuation" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "comment": "String with interpolation",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.vibe" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.vibe" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.vibe",
              "match": "\\\\[nrt\\\\\"0]"
            },
            {
              "comment": "Escaped dollar sign: $$",
              "name": "constant.character.escape.vibe",
              "match": "\\$\\$"
            },
            {
              "comment": "String interpolation",
              "begin": "(\\$)(\\{)",
              "end": "(\\})",
              "beginCaptures": {
                "1": { "name": "keyword.declaration.vibe" },
                "2": { "name": "keyword.declaration.vibe" }
              },
              "endCaptures": {
                "1": { "name": "keyword.declaration.vibe" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            {
              "name": "string.quoted.double.vibe",
              "match": "[^\"\\\\$]+"
            },
            {
              "name": "string.quoted.double.vibe",
              "match": "\\$(?!\\{)"
            }
          ]
        }
      ]
    },
    "interpolation-contents": {
      "patterns": [
        {
          "name": "constant.numeric.float.vibe",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.vibe",
          "match": "\\b[0-9][0-9_]*\\b"
        },
        {
          "name": "constant.language.boolean.vibe",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "keyword.operator.logical.vibe",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "comment": "Function calls in interpolation",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.vibe" }
          }
        },
        {
          "comment": "Method calls in interpolation",
          "match": "\\.([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.vibe" }
          }
        },
        {
          "comment": "Field access in interpolation",
          "match": "\\.([a-z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "variable.other.property.vibe" }
          }
        },
        {
          "name": "variable.other.vibe",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.type.vibe",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.vibe",
          "match": "\\b0[xX][0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.octal.vibe",
          "match": "\\b0[oO][0-7_]+\\b"
        },
        {
          "name": "constant.numeric.binary.vibe",
          "match": "\\b0[bB][01_]+\\b"
        },
        {
          "name": "constant.numeric.float.vibe",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.vibe",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vibe",
          "match": "\\b(if|else|match|while|for|in|return|break|continue|defer)\\b"
        },
        {
          "name": "keyword.declaration.vibe",
          "match": "\\b(fn|struct|enum|impl|let|const|static|mod|use|pub|as)\\b"
        },
        {
          "name": "keyword.operator.logical.vibe",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.boolean.vibe",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "variable.language.self.vibe",
          "match": "\\bself\\b"
        },
        {
          "name": "entity.name.type.self.vibe",
          "match": "\\bSelf\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.vibe",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|void)\\b"
        },
        {
          "comment": "Enum variants after dot: Option.Some, Result.Ok",
          "match": "\\.([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "support.class.vibe" }
          }
        },
        {
          "name": "entity.name.type.vibe",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.definition.vibe",
          "match": "\\b(fn)\\s+([a-z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.vibe" },
            "2": { "name": "entity.name.function.definition.vibe" }
          }
        },
        {
          "comment": "Generic function calls: func<Type>(...)",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=<[^>]*>\\s*\\()",
          "captures": {
            "1": { "name": "entity.name.function.vibe" }
          }
        },
        {
          "comment": "Regular function calls: func(...)",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.vibe" }
          }
        }
      ]
    },
    "operators": {
      "comment": "Operators are intentionally uncolored (no name/scope) for cleaner syntax highlighting, matching Rust style",
      "patterns": [
        {
          "comment": "All operators - uncolored",
          "match": "->|=>|<<=|>>=|==|!=|<=|>=|<<|>>|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|\\.\\.<|\\.\\.|<|>|=|\\+|-|\\*|/|%|&|\\||\\^|~|!|\\?"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.vibe",
          "match": "[,;:]"
        },
        {
          "name": "punctuation.accessor.vibe",
          "match": "\\."
        },
        {
          "name": "punctuation.brackets.round.vibe",
          "match": "[()]"
        },
        {
          "name": "punctuation.brackets.curly.vibe",
          "match": "[{}]"
        },
        {
          "name": "punctuation.brackets.square.vibe",
          "match": "[\\[\\]]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.vibe",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
